# Backend API environment example (do NOT commit real secrets)
# Copy to backend-api/.env and fill with strong values

# App
NODE_ENV=production
PORT=5002

# Auth/session
JWT_SECRET=CHANGE_ME_LONG_RANDOM
ADMIN_USER=admin
ADMIN_PASS=CHANGE_ME_LONG_RANDOM
JOURNAL_TOKEN=CHANGE_ME_LONG_RANDOM

# CORS: comma-separated list of allowed origins
# Example: https://journal.example.com,https://staging.example.com
ALLOWED_ORIGINS=https://your-domain

# Database (in Docker Compose, host is service name "db")
DATABASE_URL=postgres://cjuser:cjpass@db:5432/cannajournal
PGSSL=false

# S3/MinIO storage
S3_BUCKET=cjmedia
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=minioadmin
S3_SECRET_ACCESS_KEY=minioadmin
S3_ENDPOINT=http://minio:9000
S3_FORCE_PATH_STYLE=true
# Optional: for building public URLs without signed URLs
S3_PUBLIC_BASE_URL=http://your-server-ip-or-domain:9000/cjmedia
# Backend Environment Example
PORT=5002
JWT_SECRET=CHANGEME_LONG_RANDOM
ADMIN_USER=admin
ADMIN_PASS=CHANGEME_SECURE_PASSWORD
JOURNAL_TOKEN=CHANGEME_TOKEN
APP_URL=http://localhost:3001
SERVER_BASE=http://localhost:5002
# OAuth (optional)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
LINKEDIN_CLIENT_ID=
LINKEDIN_CLIENT_SECRET=
